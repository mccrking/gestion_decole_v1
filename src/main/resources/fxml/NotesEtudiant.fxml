<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.ecole.controller.NotesEtudiantController" 
      spacing="20" styleClass="content-area">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    
    <!-- En-t锚te avec moyennes -->
    <VBox spacing="15">
        <Label text=" Mes Notes" styleClass="page-title">
            <font>
                <Font name="System Bold" size="28"/>
            </font>
        </Label>
        
        <HBox spacing="20" alignment="CENTER_LEFT">
            <VBox styleClass="stat-card" spacing="5" prefWidth="180">
                <padding>
                    <Insets top="15" right="15" bottom="15" left="15"/>
                </padding>
                <Label text="Contr么les Continus" style="-fx-text-fill: #757575; -fx-font-size: 12px;"/>
                <Label fx:id="lblMoyenneControles" text="--/20" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2196F3;"/>
            </VBox>
            
            <VBox styleClass="stat-card" spacing="5" prefWidth="180">
                <padding>
                    <Insets top="15" right="15" bottom="15" left="15"/>
                </padding>
                <Label text="Examens" style="-fx-text-fill: #757575; -fx-font-size: 12px;"/>
                <Label fx:id="lblMoyenneExamens" text="--/20" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #4CAF50;"/>
            </VBox>
            
            <VBox styleClass="stat-card" spacing="5" prefWidth="200">
                <padding>
                    <Insets top="15" right="15" bottom="15" left="15"/>
                </padding>
                <Label text="Moyenne G茅n茅rale" style="-fx-text-fill: #757575; -fx-font-size: 12px;"/>
                <Label fx:id="lblMoyenneGenerale" text="--/20" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #FF9800;"/>
                <Label text="40% Contr么les + 60% Examens" style="-fx-text-fill: #999; -fx-font-size: 10px;"/>
            </VBox>
        </HBox>
    </VBox>
    
    <!-- Tableau des Contr么les -->
    <VBox spacing="10" VBox.vgrow="ALWAYS">
        <Label text=" Contr么les Continus" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2196F3;"/>
        <TableView fx:id="tableControles" prefHeight="250">
            <columns>
                <TableColumn fx:id="colIdControle" text="ID" prefWidth="50"/>
                <TableColumn fx:id="colMatiereControle" text="Mati猫re" prefWidth="200"/>
                <TableColumn fx:id="colEnseignantControle" text="Enseignant" prefWidth="180"/>
                <TableColumn fx:id="colNoteControle" text="Note (/20)" prefWidth="100"/>
                <TableColumn fx:id="colDateControle" text="Date" prefWidth="120"/>
            </columns>
        </TableView>
    </VBox>
    
    <!-- Tableau des Examens -->
    <VBox spacing="10" VBox.vgrow="ALWAYS">
        <Label text=" Examens" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #4CAF50;"/>
        <TableView fx:id="tableExamens" prefHeight="250">
            <columns>
                <TableColumn fx:id="colIdExamen" text="ID" prefWidth="50"/>
                <TableColumn fx:id="colMatiereExamen" text="Mati猫re" prefWidth="200"/>
                <TableColumn fx:id="colEnseignantExamen" text="Enseignant" prefWidth="180"/>
                <TableColumn fx:id="colNoteExamen" text="Note (/20)" prefWidth="100"/>
                <TableColumn fx:id="colDateExamen" text="Date" prefWidth="120"/>
                <TableColumn fx:id="colTypeExamen" text="Type" prefWidth="100"/>
            </columns>
        </TableView>
    </VBox>
    
</VBox>
